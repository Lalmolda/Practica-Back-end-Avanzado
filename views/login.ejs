<section>
  <div>
    <div>
      <form method="POST">
        <div>
          <label for="inputEmail">Email</label>
          <div>
            <input
              type="email"
              name="email"
              value="<%=email %>"
              id="inputEmail"
            />
          </div>
        </div>
        <div>
          <label for="inputPassword">Password</label>
          <div>
            <input
              type="password"
              name="password"
              class="form-control"
              id="inputPassword"
            />
          </div>
        </div>
        <button type="submit">Sign in</button>
        <p><%= error %></p>
      </form>
    </div>
  </div>
</section>
